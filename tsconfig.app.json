{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist/out-tsc",
        "types": ["node"]
    },
    "files": ["src/main.ts"],
    "include": ["src/**/*.d.ts", "e2e/**/*.ts", "src/**/*.ts", "**/*.ts"],
    "exclude": [
        "src/**/test-setup.ts",
        "jest.config.ts",
        "src/**/*.test.ts",
        "src/**/*.spec.ts",
        "src/**/*.mock.ts",
        "e2e/**"
    ]
}
